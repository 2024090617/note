# =============================================================================
# Monitoring MCP Server Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials

# -----------------------------------------------------------------------------
# Splunk Configuration
# -----------------------------------------------------------------------------
SPLUNK_BASE_URL=https://your-splunk-instance.splunkcloud.com:8089
SPLUNK_TOKEN=your-splunk-hec-token
# Or use username/password
# SPLUNK_USERNAME=admin
# SPLUNK_PASSWORD=your-password

# -----------------------------------------------------------------------------
# AppDynamics Configuration
# -----------------------------------------------------------------------------
APPDYNAMICS_BASE_URL=https://your-account.saas.appdynamics.com
APPDYNAMICS_ACCOUNT_NAME=your-account
APPDYNAMICS_API_CLIENT_NAME=your-api-client
APPDYNAMICS_API_CLIENT_SECRET=your-client-secret
# OAuth token endpoint (usually controller URL + /api/oauth/access_token)
APPDYNAMICS_TOKEN_URL=https://your-account.saas.appdynamics.com/controller/api/oauth/access_token

# -----------------------------------------------------------------------------
# Kafka Configuration
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# SASL authentication (optional)
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
# SSL (optional)
KAFKA_SSL_ENABLED=false
KAFKA_SSL_CAFILE=
KAFKA_SSL_CERTFILE=
KAFKA_SSL_KEYFILE=

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017
# Or with authentication
# MONGODB_URI=mongodb://username:password@host:port/?authSource=admin
MONGODB_DATABASE=admin

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
# Request timeout in seconds
REQUEST_TIMEOUT=30
# Enable debug logging
DEBUG=false
